! do not scroll with output
URxvt*scrollTtyOoutput: false
! scroll in relation to buffer
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt*cursorBlink: true
URxvt*scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.geometry: 80x60

! fonts
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: grayscale
URxvt*font: xft:Hack:pixelsize=12:antialias=true:hinting=true

! special
*.foreground:   #ffffff
*.background:   #1b1b1b
*.cursorColor:  #ffffff

! black
*.color0:       #3d3d3d
*.color8:       #4d4d4d

! red
*.color1:       #6673bf
*.color9:       #899aff

! green
*.color2:       #3ea290
*.color10:      #52ad91

! yellow
*.color3:       #b0ead9
*.color11:      #98c9bb

! blue
*.color4:       #31658c
*.color12:      #477ab3

! magenta
*.color5:       #596196
*.color13:      #7882bf

! cyan
*.color6:       #8292b2
*.color14:      #95a7cc

! white
*.color7:       #c8cacc
*.color15:      #edeff2
